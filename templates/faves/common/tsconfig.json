{
  "compilerOptions": {
    "target": "es6",
    "lib": [
      "dom",
      "esnext"
    ],
    "jsx": "react",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "inlineSourceMap": true,
    "declaration": true,
    "inlineSources": true,
    "strictNullChecks": true,
    "strictPropertyInitialization": false,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "strictFunctionTypes": true,
    "skipLibCheck": true,
    "noImplicitThis": true,
    "noImplicitReturns": true,
    "strict": true,
    "outDir": "dist",
    "baseUrl": ".",
    "paths": {
      "hax-app-common/*": [
        "../common/*"
      ],
      "@toolkit/*": [
        "../../../toolkit/lib/*"
      ],
      "*": [
        "*",
        "../../../toolkit/shell/abacus/node_modules/*",
        "../../../toolkit/shell/abacus/node_modules/@types/*"
      ],
      "@npe/pads/*": [
        "../../../libraries/pads/prototype/*"
      ]
    }
  }
}
