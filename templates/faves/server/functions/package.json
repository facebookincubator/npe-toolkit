{
  "name": "functions",
  "scripts": {
    "lint": "eslint --ext .js,.ts .",
    "build": "yarn tsc && yarn tsc-alias",
    "build:watch": "yarn tsc -w & yarn tsc-alias -w",
    "serve": "yarn build && firebase emulators:start --only functions",
    "shell": "yarn build && firebase functions:shell",
    "start": "yarn shell",
    "test": "jest --silent=false",
    "deploy": "firebase deploy --only functions:haxapp",
    "deploy:deletion": "yarn deploy --only functions:haxapp.deletion",
    "logs": "firebase functions:log",
    "npe:install": "yarn install && yarn npe:postinstall"
  },
  "engines": {
    "node": "16"
  },
  "main": "lib/server/functions/src/index.js",
  "dependencies": {
    "axios": "^1.2.0",
    "cls-hooked": "^4.2.2",
    "firebase": "^8.2.3",
    "firebase-admin": "^11.4.1",
    "firebase-functions": "^4.1.1",
    "mongodb": "^4.13.0",
    "nullthrows": "^1.1.1",
    "react": "18.0.0",
    "reflect-metadata": "^0.1.13"
  },
  "devDependencies": {
    "@types/cls-hooked": "^4.3.3",
    "@typescript-eslint/eslint-plugin": "^3.9.1",
    "@typescript-eslint/parser": "^3.8.0",
    "eslint": "^7.6.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-import": "^2.22.0",
    "eslint-plugin-prettier": "^4.0.0",
    "firebase-functions-test": "^0.2.0",
    "firebase-tools": "^11.20.0",
    "jest": "^28.1.0",
    "prettier": "^2.5.1",
    "ts-jest": "^28",
    "tsc-alias": "^1.4.2",
    "typescript": "^4.5.5"
  },
  "localDependencies": {
    "@toolkit": "../../npe-toolkit/",
    "@app/common": "../../common/"
  },
  "private": true
}
