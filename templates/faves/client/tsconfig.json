{
  "include": [
    ".",
    "/usr/local/lib/npe-toolkit/shell/latest/types"
  ],
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@app/common/*": [
        "../common/*"
      ],
      "@app/*": [
        "./*"
      ],
      "@toolkit/*": [
        "/usr/local/lib/npe-toolkit/lib/*"
      ],
      "@npe-toolkit-shell/*": [
        "/usr/local/lib/npe-toolkit/shell/latest"
      ],
      "*": [
        "*",
        "../project/node_modules/*",
        "../project/node_modules/@types/*",
        // Temporary until we separate out server datastore deps in core datatore API
        // TODO: Remove once API is cleaned up
        "/usr/local/lib/npe-toolkit/shell/latest/server/node_modules/*"
      ]
    }
  },
  "extends": "/usr/local/lib/npe-toolkit/shell/latest/tsconfig"
}